@model IEnumerable<AzureB2BInvite.Models.PreAuthDomain>

@{
    ViewBag.Title = "Pre-Approval Config";
    bool hasRecords = (Model.Count() > 0);
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New...", "Edit", new { area = "admin" }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DomainName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DomainRedemptionSettings.InviterResponseEmailAddr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DomainRedemptionSettings.InviteRedirectUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DomainRedemptionSettings.RequirePreauth)
        </th>
        <th> 
            @Html.DisplayNameFor(model => model.AuthUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

    @if (!hasRecords){
        <tr><td colspan="4">No preauth domains configured</td></tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DomainName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DomainRedemptionSettings.InviterResponseEmailAddr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DomainRedemptionSettings.InviteRedirectUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DomainRedemptionSettings.RequirePreauth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
