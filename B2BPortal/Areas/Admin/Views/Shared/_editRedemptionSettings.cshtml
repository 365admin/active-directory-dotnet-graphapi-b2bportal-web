@model AzureB2BInvite.Models.RedemptionSettings
@{ 
    string prefix = ViewBag.RedemptionPropertyName;
}
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.RequirePreauth, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <div class="checkbox">
                @Html.EditorFor(model => model.RequirePreauth, null, prefix + ".RequirePreauth")
                @Html.ValidationMessageFor(model => model.RequirePreauth, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-7">
            If checked, users will only be able to submit an invitation request after authenticating
            to their home Azure Active Directory tenant.
        </div>
    </div>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.EditProfileAfterRedeem, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            <div class="checkbox">
                @Html.EditorFor(model => model.EditProfileAfterRedeem, null, prefix + ".EditProfileAfterRedeem")
                @Html.ValidationMessageFor(model => model.EditProfileAfterRedeem, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-7">
            Indicate whether you'd like users to be returned to the site to update profile information for
            their new guest account in your tenant. If false, they will be taken to the Redirect Url after redemption.
            If true, they'll be returned to the profile editor here, then after they update the profile they'll be
            taken to the redirect url.
        </div>
    </div>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.InviteRedirectUrl, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.InviteRedirectUrl, null, prefix + ".InviteRedirectUrl", prefix + ".InviterResponseEmailAddr")
            @Html.ValidationMessageFor(model => model.InviteRedirectUrl, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-7">
            Default site that guests are returned to after redeeming an invitation.
        </div>
    </div>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.InviterResponseEmailAddr, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.InviterResponseEmailAddr, null, prefix + ".InviterResponseEmailAddr", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.InviterResponseEmailAddr, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-7">
            Return email address used in invitations and other places throughout the site.
        </div>
    </div>
